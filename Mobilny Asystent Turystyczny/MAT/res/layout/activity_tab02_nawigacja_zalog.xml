<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/wyswietlanie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:text="Co wyświetlić:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/chmiejsca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text=" Miejsca" />

    <CheckBox
        android:id="@+id/chgrupa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text=" Grupa" />

    <CheckBox
        android:id="@+id/chpinezki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text=" Moje miejsca" />

    <CheckBox
        android:id="@+id/chtrasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text=" Trasa" />

  
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

		<TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        <ToggleButton
	        android:id="@+id/pinezkiPut"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="ToggleButton" />
        
        <TextView
         android:id="@+id/opisDoPinezki"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:padding="10sp"
         android:textSize="16sp"
         android:text="Włącz/wyłącz stawianie pinezek"
         android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>
         <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        <ToggleButton
	        android:id="@+id/trasaOnOff"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="ToggleButton" />
        <TextView
         android:id="@+id/onffwyznaczanietrasy"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:padding="10sp"
         android:textSize="16sp"
         android:text="Włącz/wyłącz wyznaczanie trasy"
         android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>
    </TableLayout>


    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="pieszo" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="samochodem" />
    </RadioGroup>

</LinearLayout>